<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="fill_parent" android:layout_height="fill_parent"
android:background="#EFEFEF">
<LinearLayout 
	android:id="@+id/LinearLayout01" 
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	android:orientation="vertical"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:scrollbars="horizontal"
	android:background="#EFEFEF"
	android:isScrollContainer="true">
	<LinearLayout android:id="@+id/LinearLayout01" 
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent"
		android:layout_weight="1"
		android:orientation="horizontal" 
		android:paddingTop="10px"
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:gravity="center"
		android:background="#3366CC" >
		<Button
			android:id="@+id/previous"
			android:layout_height="wrap_content"
			android:text="Previous" android:layout_width="130px"/>
		<TextView 
				android:id="@+id/quoteStatus"
				android:layout_width="30px"
				android:layout_height="wrap_content"
				android:textSize="11px"
				android:gravity="center"
				android:textStyle="bold"
				android:paddingTop="10px"
				android:textColor="#FFFFFF"
				android:text="1/12"
				android:paddingBottom="15px"
				/>
			
		<Button
			android:id="@+id/next"
			android:layout_height="wrap_content"
			android:text="Next" android:layout_width="130px"/>
	</LinearLayout>
	<LinearLayout 
		android:id="@+id/LinearLayout01" 
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent"
		xmlns:android="http://schemas.android.com/apk/res/android" 
		android:orientation="horizontal"
		android:layout_weight="5"
		android:gravity="center">
			<TextView 
				android:id="@+id/quote"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="20px"
				android:gravity="center"
				android:textStyle="bold"
				android:paddingTop="10px"
				android:paddingLeft="10px"
				android:paddingRight="10px"
				android:textColor="#000000"
				android:text="This is a very very long quote
				adfasfsdafasfad
				sadfasfsad
				fsadf
				sdaf
				asdfsdafas
				dfdasf
				asdfasdfsda
				fsdafsad
				fsadfasdfa
				sdfasd
				fasd
				fsadfdas
				fsdafasfasf
				dsafas
				fasdfasdfsda
				dsfsdafasdfsa
				"
				android:paddingBottom="20px"
				/>
	</LinearLayout>
	<LinearLayout 
		android:id="@+id/LinearLayout01" 
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:paddingLeft="10px"
		android:paddingRight="10px"
		xmlns:android="http://schemas.android.com/apk/res/android" 
		android:orientation="horizontal">
		<TextView 
			android:id="@+id/category"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="12px"
			android:gravity="left"
			android:textColor="#003399"
			android:layout_weight="1"
			android:text="Test Category"
			android:textStyle="bold" />
		<TextView 
			android:id="@+id/author"
			android:textStyle="bold"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="12px"
			android:gravity="right"
			android:textColor="#003399"
			android:layout_weight="1"
			android:paddingRight="10px"
			android:text="Test Author" />
	</LinearLayout>
	<LinearLayout 
		android:paddingBottom="10px"
		android:id="@+id/LinearLayout01" 
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent"
		android:paddingTop="20px"
		android:gravity="center_horizontal"
		xmlns:android="http://schemas.android.com/apk/res/android" 
		android:orientation="horizontal"
		android:layout_weight="5"
		>
		 <Button
			android:id="@+id/share"
			android:layout_width="100px" 
			android:layout_height="60px"
			android:text="Share"
			android:padding="10px"
			
			/>
		<Button
			android:id="@+id/favorites"
			android:layout_width="150px" 
			android:layout_height="60px"
			android:textSize="12px"
			android:text="Add to Favorites"
			android:padding="10px"/>
	</LinearLayout>
</LinearLayout>
</ScrollView>